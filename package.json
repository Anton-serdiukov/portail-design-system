{
  "name": "@betao/ds",
  "version": "0.0.5",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betao-dev/portail-design-system.git"
  },
  "scripts": {
    "build": "vue-cli-service build --target lib --name ds ./src/lib.js",
    "build-demo": "vue-cli-service build",
    "build-icons": "vue-cli-service build --target lib --name icons --dest ./dist/icons ./src/icons/index.js",
    "lint": "vue-cli-service lint",
    "postbuild": "npm run build-icons",
    "prerelease": "npm run build",
    "release": "release-it",
    "serve": "vue-cli-service serve"
  },
  "main": "./dist/ds.common.js",
  "browser": {
    "css": "./dist/ds.css",
    "icons": "./dist/icons/icons.common.js",
    "vars.less": "./src/styles/vars.less"
  },
  "files": [
    "dist/*",
    "public/*",
    "src/*",
    "*.json",
    "*.js"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.1",
    "@vue/cli-service": "^3.1.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "release-it": "^9.0.0",
    "svg-inline-loader": "^0.8.0",
    "vue": "^2.5.17",
    "vue-highlightjs": "^1.3.3",
    "vue-template-compiler": "^2.5.17"
  },
  "peerDependencies": {
    "vue": "^2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-v-for-key": "off",
      "vue/no-unused-vars": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
